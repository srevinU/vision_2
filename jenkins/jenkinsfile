pipeline {
    agent any
    stages {
        stage('init') {
            steps {
                script {
                    // def path = pwd()
                    def functions = load './script.groovy'
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    functions.buildApp()
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    functions.testApp()
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    functions.deployApp()
                }
            }
        }
    }
}

post {
    always {
    //
    }
    success {
    //
    }
    failure {
    //
    }
}
