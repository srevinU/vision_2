pipeline {
    agent any
    stages {
        stage('init') {
            steps {
                echo 'init'
            }
        }
        stage('Build') {
            steps {
                script {
                    def script = load "${WORKSPACE}/jenkins/build.groovy"
                    script.buildApp()
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    def script = load "${WORKSPACE}/jenkins/test.groovy"
                    script.testApp()   
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    def script = load "${WORKSPACE}/deploy/script.groovy"
                    script.deployApp()
                }
            }
        }
    }
    post {
        always {
            echo 'This will run always'
        }
        success {
            echo 'This will run on success'
        }
        failure {
            echo 'This will run on failure'
        }
    }
}
