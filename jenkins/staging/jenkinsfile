pipeline {
    agent any
    tools {nodejs 'node'}
    stages {
        stage('Build') {
            steps {
                script {
                    def groovy = load "${WORKSPACE}/jenkins/staging/build.staging.groovy"
                    groovy.buildApp()
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    def groovy = load "${WORKSPACE}/jenkins/staging/test.staging.groovy"
                    groovy.testApp()   
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    def groovy = load "${WORKSPACE}/jenkins/staging/deploy.staging.groovy"
                    groovy.deployApp()
                }
            }
        }
    }
    post {
        always {
            echo 'This will run always'
        }
        success {
            echo 'This will run on success'
        }
        failure {
            echo 'This will run on failure'
        }
    }
}
